<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:padding="8dp" />

    <TextView
        android:id="@+id/typeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_toRightOf="@+id/nameTitle" />

    <TextView
        android:id="@+id/dosageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosage"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_toRightOf="@+id/typeTitle" />

    <TextView
        android:id="@+id/remainingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_toRightOf="@+id/dosageTitle" />

    <TextView
        android:id="@+id/unitTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/dosageTitle"
        android:padding="8dp"
        android:text="Unit"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_below="@+id/nameTitle"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name 1"
        android:padding="8dp"
        android:layout_below="@+id/divider1" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type 1"
        android:padding="8dp"
        android:layout_below="@+id/divider1"
        android:layout_toRightOf="@+id/name" />

    <TextView
        android:id="@+id/dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosage 1"
        android:padding="8dp"
        android:layout_below="@+id/divider1"
        android:layout_toRightOf="@+id/type" />

    <TextView
        android:id="@+id/remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining 1"
        android:padding="8dp"
        android:layout_below="@+id/divider1"
        android:layout_toRightOf="@+id/dosage" />


    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="166dp"
        android:layout_toRightOf="@+id/dosageTitle"
        android:padding="8dp"
        android:text="Unit"
        android:textStyle="bold" />


</RelativeLayout>
